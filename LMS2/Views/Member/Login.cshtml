@model LMS2.Models.MemberLogin
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div class="center">
    <div class="form">
        <h2>Login</h2>
        @* <div class="form__container shadow"> *@
            <form asp-action="Login" class="form__container shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @* <label asp-for="UserName" class="control-label"></label> *@
                <input asp-for="UserName" placeholder="Username" class="form-control"></sl-input>
                @* <label asp-for="Password" class="control-label"></label> *@
                <input asp-for="Password" placeholder="Password" class="form-control" type="password"></sl-input>

                <input type="submit" value="Login" class="btn btn-success" />
                @* <sl-button type="success" value="Login">Login</sl-button> *@
            </form>
        @* </div> *@
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
