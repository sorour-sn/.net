@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
  Layout = "_Layout";
  var username = HttpContextAccessor.HttpContext.Session.GetString("_Username");
}

