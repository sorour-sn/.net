        {
          <p>
            <a asp-action="Login" asp-controller="Member">Login</a>
            /
            <a asp-action="Signup" asp-controller="Users">Signup</a>
          </p>
        }
        else
        {
          <a asp-action="Profile" asp-controller="Member">@username</a>
        }
      }
    </div>
    <div class="content__header-poster"></div>
  </div>
