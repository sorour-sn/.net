@model LMS2.Models.AdminLogin
@{
    Layout = "_Layout";
    ViewData["Title"] = "Login";
}

<div class="background-pattern">
    <img src="/assets/blue-pattern.png" />
</div>

<div class="center">
    <div class="form">
        <h2>Login</h2>
        @* <div class="form__container shadow"> *@
        <form asp-action="Login" class="form__container shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <label asp-for="UserName" class="control-label"></label> *@
            <input asp-for="UserName" placeholder="Username" class="form-control"></sl-input>
            <span asp-validation-for="UserName" class="text-danger"></span>
            @* <label asp-for="Password" class="control-label"></label> *@
            <input asp-for="Password" placeholder="Password" class="form-control" type="password"></sl-input>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="submit" value="Login" class="btn btn-success" />
            @* <sl-button type="success" value="Login">Login</sl-button> *@
            <div style="text-align: center;">
                <a asp-action="Signup" asp-controller="Users">Signup</a>
            </div>
        </form>
        @* </div> *@
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

